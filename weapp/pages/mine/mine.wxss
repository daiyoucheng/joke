.userAvatar {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.flex {
  display: flex;
}
.flexDirColumn {
  flex-direction: column;
}
.flexAround {
  justify-content: space-around;
}
.user {
  height: 100%;
  background: #F5F5F5;
}
.user .userInfo {
  padding: 10rpx 10rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.user .funtions {
  display: flex;
  flex-wrap: wrap;
  margin: -35rpx 13rpx 0rpx 13rpx;
  padding: 10rpx;
  border-radius: 43rpx;
  justify-content: space-around;
  background: white;
  min-height: 300rpx;
}
.user .funtions .function image {
  width: 70rpx;
  height: 70rpx;
}
.user .funtions .function .font {
  white-space: nowrap;
  color: #4D4D4D;
  font-size: 30rpx;
}

