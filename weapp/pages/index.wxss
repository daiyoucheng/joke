.flex {
  display: flex;
  justify-content: space-around;
  width: 100%;
  color: white;
  padding: 10rpx 0;
  background: rgba(254, 190, 17, 0.9);
}
.index .box-container {
  position: relative;
}
.index .border-bottom {
  padding: 10rpx;
}
.index .active::after {
  content: '';
  position: absolute;
  left: calc(50% - 25rpx);
  top: auto;
  bottom: 0;
  right: auto;
  height: 5rpx;
  width: 50rpx;
  background-color: white;
}

